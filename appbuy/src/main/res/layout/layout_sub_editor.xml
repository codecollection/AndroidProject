<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/project_comment"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|right"
    android:background="@drawable/widget_bar_bg_n"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="5dip"
    android:visibility="gone" >

    <EditText
        android:id="@+id/project_editer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:autoLink="web|email"
        android:background="@drawable/reply_edittext_bg"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <Button
        android:id="@+id/project_editer_submit"
        android:layout_width="45dip"
        android:layout_height="34dip"
        android:layout_marginLeft="5dip"
        android:background="@drawable/widget_button_bg"
        android:text="发送"
        android:textColor="@color/black"
        android:textSize="14dip" />

</LinearLayout>