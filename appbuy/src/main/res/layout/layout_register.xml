<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical" >
    
    <include layout="@layout/main_header"/>
    
    <ScrollView 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
    	android:layout_weight="1"
		android:scrollbars="vertical">
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    
		    <LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical"
		        android:layout_marginTop="20dp"
		        android:background="@color/white">
		        
		        <LinearLayout
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginBottom="5dp"
		            android:layout_marginLeft="20dp"
		            android:layout_marginTop="5dp"
		            android:orientation="horizontal" >
		
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="center"
		                android:text="账号："
		                android:textColor="@color/text"
		                android:textSize="@dimen/text_size_default" />
		
		            <EditText
		                android:id="@+id/register_userName"
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:layout_marginBottom="5dp"
		                android:layout_marginRight="5dp"
		                android:layout_marginTop="5dp"
		                android:layout_weight="1"
		                android:hint="邮箱/手机号"
		                android:maxLength="25"
		                android:background="@null"
	            		android:selectAllOnFocus="true"
		                android:singleLine="true" />
		
		        </LinearLayout>
		        
		        <View
		            android:layout_width="fill_parent"
		            android:layout_height="0.5dp"
		            android:layout_marginLeft="10dp"
		            android:background="@color/gray" />
		        
		        <LinearLayout
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginBottom="5dp"
		            android:layout_marginLeft="20dp"
		            android:layout_marginTop="5dp"
		            android:orientation="horizontal" >
		
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="center"
		                android:text="密码："
		                android:textColor="@color/text"
		                android:textSize="@dimen/text_size_default" />
		
		            <EditText
		                android:id="@+id/register_passWord"
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:layout_marginBottom="5dp"
		                android:layout_marginRight="5dp"
		                android:layout_marginTop="5dp"
		                android:layout_weight="1"
		                android:hint="请设置密码"
		                android:inputType="textPassword"
		                android:maxLength="30"
		                android:background="@null"
	            		android:selectAllOnFocus="true"
		                android:singleLine="true" />
		
		        </LinearLayout>
		        
		        <View
		            android:layout_width="fill_parent"
		            android:layout_height="0.5dp"
		            android:layout_marginLeft="10dp"
		            android:background="@color/gray" />
		        
		        <LinearLayout
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginBottom="5dp"
		            android:layout_marginLeft="20dp"
		            android:layout_marginTop="5dp"
		            android:orientation="horizontal" >
		
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="center"
		                android:text="密码："
		                android:textColor="@color/text"
		                android:textSize="@dimen/text_size_default" />
		
		            <EditText
		                android:id="@+id/register_passWord2"
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:layout_marginBottom="5dp"
		                android:layout_marginRight="5dp"
		                android:layout_marginTop="5dp"
		                android:layout_weight="1"
		                android:hint="请再次输入密码确认"
		                android:inputType="textPassword"
		                android:maxLength="30"
		                android:background="@null"
	            		android:selectAllOnFocus="true"
		                android:singleLine="true" />
		
		        </LinearLayout>
		        
		    </LinearLayout>
		    
		    <TextView
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="20dp"
		        android:layout_marginRight="20dp"
		        android:layout_marginTop="3dp"
		        android:text="密码最短8个字符，区分大小写"
		        android:textColor="@color/text_hind"
		        android:textSize="@dimen/text_size_hind" />
		    
		    <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="10dp"
		        android:background="@color/white"
		        android:paddingTop="5dp"
		        android:paddingBottom="5dp"
		        android:orientation="horizontal" >
		
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center"
		            android:layout_marginLeft="20dp"
		            android:text="昵称："
		            android:textColor="@color/text"
		            android:textSize="@dimen/text_size_default" />
		
		        <EditText
		            android:id="@+id/register_nickName"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_marginBottom="5dp"
		            android:layout_marginRight="5dp"
		            android:layout_marginTop="5dp"
		            android:layout_weight="1"
		            android:maxLength="14"
		            android:background="@null"
	            	android:selectAllOnFocus="true"
		            android:singleLine="true" />
		    </LinearLayout>
		    
		    <TextView
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="20dp"
		        android:layout_marginRight="20dp"
		        android:layout_marginTop="3dp"
		        android:text="昵称中、英文、数字均可，最长14个英文或7个汉字"
		        android:textColor="@color/text_hind"
		        android:textSize="@dimen/text_size_hind" />
		    
		    <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="10dp"
		        android:background="@color/white"
		        android:paddingTop="5dp"
		        android:paddingBottom="5dp"
		        android:orientation="horizontal" >
		
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center"
		            android:layout_marginLeft="20dp"
		            android:text="邮箱："
		            android:textColor="@color/text"
		            android:textSize="@dimen/text_size_default" />
		
		        <EditText
		            android:id="@+id/register_mailBox"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_marginBottom="5dp"
		            android:layout_marginRight="5dp"
		            android:layout_marginTop="5dp"
		            android:layout_weight="1"
		            android:hint="用于找回密码"
		            android:maxLength="25"
		            android:background="@null"
	            	android:selectAllOnFocus="true"
		            android:singleLine="true" />
		    </LinearLayout>
		    
		    <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="15dp"
		        android:background="@color/white"
		        android:paddingTop="5dp"
		        android:paddingBottom="5dp"
		        android:orientation="horizontal" >
		
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center"
		            android:layout_marginLeft="20dp"
		            android:text="推荐人账号："
		            android:textColor="@color/text"
		            android:textSize="@dimen/text_size_default" />
		
		        <EditText
		            android:id="@+id/register_introduce"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_marginBottom="5dp"
		            android:layout_marginRight="5dp"
		            android:layout_marginTop="5dp"
		            android:layout_weight="1"
		            android:hint="邮箱/手机号(选填)"
		            android:maxLength="25"
		            android:background="@null"
	            	android:selectAllOnFocus="true"
		            android:singleLine="true" />
		    </LinearLayout>
		    
		    <Button
		        android:id="@+id/register_submit"
		        android:layout_width="match_parent"
		        android:layout_height="50dp"
		        android:layout_marginLeft="15dp"
		        android:layout_marginRight="15dp"
		        android:layout_marginTop="20dp"
		        android:background="@color/black"
		        android:text="注册"
		        android:textColor="@color/white"
		        android:textSize="20sp" />
		    
		    <LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="20dp"
		        android:layout_marginTop="5dp"
		        android:orientation="horizontal">
		        <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textColor="@color/text_hind"
			        android:textSize="@dimen/text_size_hind"
			        android:text="注册表示您同意" />
		        <TextView
		            android:id="@+id/register_syxy"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textColor="@color/text_url"
			        android:textSize="@dimen/text_size_hind"
			        android:text="代团服务使用协议" />
		        <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textColor="@color/text_hind"
			        android:textSize="@dimen/text_size_hind"
			        android:text="和" />
		        <TextView
		            android:id="@+id/register_ystk"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textColor="@color/text_url"
			        android:textSize="@dimen/text_size_hind"
			        android:text="隐私条款" />
		    </LinearLayout>
    
    	</LinearLayout>
        
    </ScrollView>
    
</LinearLayout>