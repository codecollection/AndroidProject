<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".FirstActivity" >

    <Button
        android:id="@+id/button_service_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="启动服务" />

    <Button
        android:id="@+id/button_service_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_service_1"
        android:layout_below="@+id/button_service_1"
        android:text="停止服务" />

    <Button
        android:id="@+id/button_service_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_service_2"
        android:layout_below="@+id/button_service_2"
        android:text="启动/调用Bind服务" />

    <Button
        android:id="@+id/button_service_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_service_3"
        android:layout_below="@+id/button_service_3"
        android:text="解绑Bind服务" />

    <Button
        android:id="@+id/button_service_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_service_4"
        android:layout_below="@+id/button_service_4"
        android:text="启动/调用IPC服务" />

    <Button
        android:id="@+id/button_service_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_service_5"
        android:layout_below="@+id/button_service_5"
        android:text="解绑IPC服务" />

    <Button
        android:id="@+id/button_service_remote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_service_7"
        android:layout_alignParentBottom="true"
        android:text="调用其他APP的服务接口" />

    <Button
        android:id="@+id/button_service_7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_service_remote"
        android:layout_alignLeft="@+id/button_service_6"
        android:text="IntentService" />

    <Button
        android:id="@+id/button_service_aidl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_service_6"
        android:layout_below="@+id/button_service_6"
        android:text="AIDL之跨应用调用Service" />

</RelativeLayout>