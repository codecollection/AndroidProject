<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".FirstActivity" >

    <RadioGroup
        android:id="@+id/radioGroup_ui_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp" >

        <RadioButton
            android:id="@+id/radio_ui_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="男" />

        <RadioButton
            android:id="@+id/radio_ui_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="女" />

        <RadioButton
            android:id="@+id/radio_ui_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未知" />
    </RadioGroup>

    <CheckBox
        android:id="@+id/checkBox_ui_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/radioGroup_ui_1"
        android:layout_marginLeft="53dp"
        android:text="中国" />

    <Spinner
        android:id="@+id/spinner_ui_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/radioGroup_ui_1"
        android:layout_centerVertical="true" />

    <Button
        android:id="@+id/button_listview_ui_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinner_ui_1"
        android:layout_below="@+id/spinner_ui_1"
        android:layout_marginTop="28dp"
        android:text="查看列表页" />

    <CheckBox
        android:id="@+id/checkBox_ui_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkBox_ui_1"
        android:layout_below="@+id/checkBox_ui_1"
        android:text="美国" />

</RelativeLayout>